---
import DarkModeToggle from "./DarkModeToggle.astro";
import HeaderLink from "./HeaderLink.astro";
import { siteData } from "site.config";
import Link from "./Link.astro";
const { instagramLink, facebookLink } = siteData;
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/faqs">Faqs</HeaderLink></li>
        <li><HeaderLink href="/menu">Menu</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <Link
      class="unset text-xl ml-4 hover:text-text-link"
      href={instagramLink}
      newTab
    >
      <i
        class="fa-brands fa-instagram"
        aria-hidden="true"
        title="Solitude in Himalayas on Instagram"></i>
      <span class="fa-sr-only">Solitude in Himalayas on Instagram</span>
    </Link>

    <Link
      class="unset text-xl ml-4 hover:text-text-link"
      href={facebookLink}
      newTab
    >
      <i
        class="fa-brands fa-facebook"
        aria-hidden="true"
        title="Solitude in Himalayas on Facebook"></i>
      <span class="fa-sr-only">Solitude in Himalayas on Facebook</span>
    </Link>
  </div>
  <DarkModeToggle />
</header>

<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
